{
  "name": "forge-web-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "check": "npm run lint && npm run build",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "deploy:staging": "echo 'Set VERCEL_TOKEN and run: npx vercel --prod=false --yes' && exit 1",
    "push:secure": "bash ./scripts/push-with-token.sh",
    "deploy:prod": "bash ./scripts/vercel-redeploy.sh"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
